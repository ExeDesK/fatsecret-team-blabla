                        sleep 2
                        echo 'Test OK!'

                        echo 'Test COMPLETE!'
                    }
                }
            }
        }
        stage ('DEPLOY'){
            steps{
                script{
                    if (params.SEX)=="MALE" {
                        echo "Welcome Mister ${params.NAME}"
